      script(defer).
        (function() {
          const rawApi = "#{url_for(theme.Umami.umami_api)}".replace(/\/$/, '');
          const websiteId = "#{theme.Umami.umami_id}";

          // 计算今天的 UTC 起始与结束（毫秒）
          const now = new Date();
          // 取当天 00:00:00 UTC（注意：使用 UTC，避免时区差异导致后端误判）
          const startUtc = Date.UTC(now.getUTCFullYear(), now.getUTCMonth(), now.getUTCDate(), 0, 0, 0, 0);
          // 当天 23:59:59.999 UTC
          const endUtc = Date.UTC(now.getUTCFullYear(), now.getUTCMonth(), now.getUTCDate(), 23, 59, 59, 999);

          function buildStatsUrl(base, siteId, startMs, endMs) {
            base = base.replace(/\/$/, '');
            // 如果 base 已包含 /websites/{siteId}
            if (base.includes(`/websites/${siteId}`)) {
              // 已含 /stats ?
              if (base.includes('/stats')) {
                return base + (base.includes('?') ? '&' : '?') + `startAt=${startMs}&endAt=${endMs}`;
              } else {
                return base + '/stats' + `?startAt=${startMs}&endAt=${endMs}`;
              }
            }
            // 如果 base 含 /websites 但不是当前 siteId，重新构造
            if (base.includes('/websites')) {
              const idx = base.indexOf('/websites');
              const prefix = base.slice(0, idx);
              return `${prefix}/websites/${siteId}/stats?startAt=${startMs}&endAt=${endMs}`;
            }
            // 常见情况：base 是 https://your-umami 或 https://your-umami/api
            return `${base}/websites/${siteId}/stats?startAt=${startMs}&endAt=${endMs}`;
          }

          const umamiApiUrl = buildStatsUrl(rawApi, websiteId, startUtc, endUtc);

          fetch(umamiApiUrl, {
            method: "GET",
            headers: {
              "Accept": "application/json"
            },
            credentials: "include"
          })
            .then(res => {
              // 若后端返回400/非OK，把 response text 打出来，便于诊断
              if (!res.ok) return res.text().then(t => { throw new Error(`Umami API ${res.status}: ${t}`); });
              return res.json();
            })
            .then(data => {
              const title = {
                "today_uv": "今日人数",
                "today_pv": "今日访问",
                "yesterday_uv": "昨日人数",
                "yesterday_pv": "昨日访问",
                "last_month_pv": "本月访问",
                "last_year_pv": "本年访问"
              };
              const s = document.getElementById("statistic");
              if (!s) return;
              for (let key in data) {
                if (data.hasOwnProperty(key) && title[key]) {
                  s.innerHTML += `<div><span>${title[key]}</span><span id="${key}">${data[key]}</span></div>`;
                }
              }
              initCountUp(data, title);
            })
            .catch(error => {
              console.error('Umami 统计获取失败：', error);
            });
        })();
